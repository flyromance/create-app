{
  "name": "@flyromance/create-app",
  "version": "1.0.1",
  "description": "支持从多源（gitee、github、gitlab）创建项目的cli工具",
  "author": "flyromance",
  "keywords": [
    "cli",
    "create",
    "app",
    "project",
    "template"
  ],
  "main": "lib/index.js",
  "bin": {
    "create-app": "bin/index.js",
    "create-project": "bin/index.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "dev": "tsc --module commonjs --outDir lib --watch",
    "build": "npm run build:cjs",
    "build:cjs": "tsc --module commonjs --outDir lib",
    "build:esm": "tsc --module esnext --outDir esm",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "download": "^8.0.0",
    "inquirer": "^8.1.2",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "ora": "^5.0.0",
    "os-homedir": "^2.0.0",
    "request": "^2.67.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "tslib": "^2.3.0",
    "uid": "0.0.2"
  },
  "devDependencies": {
    "@types/download": "^8.0.1",
    "@types/inquirer": "^8.1.3",
    "@types/node": "^16.11.10",
    "@types/rimraf": "^3.0.2",
    "eslint": "^8.0.0",
    "prettier": "^2.4.1",
    "typescript": "^4.5.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "ISC",
  "engines": {
    "node": ">=10.0.0"
  }
}